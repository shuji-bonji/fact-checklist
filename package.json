{
  "name": "fact-checklist",
  "version": "1.0.0",
  "description": "ファクトチェックリスト - 情報の信頼性を科学的・体系的に評価するファクトチェック支援PWA",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "preview:prod": "NODE_ENV=production GITHUB_PAGES=true npm run build && vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings 0",
    "lint:check": "eslint . --format compact | grep -E '([0-9]+ warnings)' || echo '✅ No warnings found'",
    "lint:security": "eslint . --rule 'no-eval: error' --rule 'svelte/no-at-html-tags: error'",
    "format": "prettier --write .",
    "lighthouse": "npm run build && lhci autorun",
    "lighthouse:ci": "npm install -g @lhci/cli@0.12.x && npm run lighthouse",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "update:pwa-version": "node scripts/update-pwa-version.js",
    "generate:git-lastmod": "node scripts/get-git-lastmod.js",
    "prebuild": "npm run generate:sitemap && npm run generate:git-lastmod && npm run update:pwa-version",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "quality:check": "npm run lint && npm run check && npm run test:run",
    "type-check": "tsc --noEmit --pretty",
    "clean": "rm -rf .svelte-kit build node_modules/.vite",
    "clean:install": "npm run clean && npm install",
    "analyze": "vite-bundle-visualizer",
    "lighthouse:local": "lighthouse http://localhost:4173 --output html --view"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@sveltejs/kit": "^2.8.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/eslint": "^9.6.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.15.0",
    "happy-dom": "^15.11.7",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.2",
    "svelte-eslint-parser": "^1.2.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.7",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@sveltejs/adapter-vercel": "^5.7.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "uuid": "^10.0.0"
  },
  "keywords": [
    "fact-check",
    "information-verification",
    "pwa",
    "svelte",
    "typescript",
    "checklist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shuji-bonji/fact-checklist.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "cookie": ">=0.7.0",
    "dompurify": ">=3.2.4",
    "esbuild": ">=0.24.3"
  }
}
